  

<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="omb_login">
      <h3 class="omb_authTitle">Entre ou <%= render "professores/shared/link_signup" %></h3>
      <div class="row omb_row-sm-offset-3 omb_socialButtons">
          <div class="col-xs-6 col-sm-3">
            <%= link_to "Facebook", professor_facebook_omniauth_authorize_path, class: 'btn btn-lg btn-block omb_btn-facebook' %>
          </div>
          <div class="col-xs-6 col-sm-3">
              <%= link_to "Google", professor_google_oauth2_omniauth_authorize_path, class: 'btn btn-lg btn-block omb_btn-google' %>
        </div>  
      </div>

    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
        <hr class="omb_hrOr">
        <span class="omb_spanOr">ou</span>
      </div>
    </div>

    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6">  
          <form class="omb_loginForm" action="" autocomplete="off" method="POST">
          <div class="field input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "email address"%>
          </div>

          <span class="help-block"></span>

          <div class="field input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "password"%>
          </div>

          <span class="help-block"></span>

          <%= f.submit "Entrar", class: "btn btn-lg btn-primary btn-block"%>

        </form>
      </div>
      </div>
    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-3">
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Lembrar?" %>
          </div>
        <% end %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <p class="omb_forgotPwd">
          <%= render "professores/shared/forgot_pass" %>
        </p>
      </div>
    </div>        
  </div>
  <% end %>
  <hr>
  <%= render "layouts/footer_main" %>
</div>