<!DOCTYPE html>
<html>
  <head>
    <title>Lacroix</title>
    <%= csrf_meta_tags %>
   
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">


            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Lacroix</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="<%= 'active' if current_page?(estudante_path) %>"><%= link_to "Estudante", estudante_path %></li>
                    <li class="<%= 'active' if current_page?(pai_path) %>"><%= link_to "Pai", pai_path %></li>
                    <li class="<%= 'active' if current_page?(professor_path) %>"><%= link_to "Professor", professor_path %></li>
                    <li class="<%= 'active' if current_page?(escola_path) %>"><%= link_to "Escola", escola_path %></li>
                    <li class="<%= 'active' if current_page?(governo_path) %>"><%= link_to "Governo", governo_path %></li>
                </ul>
                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <% if current_professor %>
                      <%= link_to "Sair", destroy_session_path(current_professor), method: :delete, class: "btn btn-default" %>
                    <% else %>
                      <%= link_to "Entre", new_professor_session_path, class: "btn btn-default" %>
                    <% end %>
                    <%= link_to "Cadastre-se", new_professor_registration_path, class: "btn btn-success" %>
                </form>
            </div>
            <!-- /.navbar-collapse -->
            
        <!-- /.container -->
    </nav>

    <% if notice %>
      <div class="notice"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class="alert"><%= alert %></div>
    <% end %>

    <%= yield %>

    <!-- Footer -->
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <ul class="list-inline">
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li class="footer-menu-divider">&sdot;</li>
                            <li>
                                <a href="sobre">Sobre</a>
                            </li>
                            <li class="footer-menu-divider">&sdot;</li>
                            <li>
                                <a href="#services">Services</a>
                            </li>
                            <li class="footer-menu-divider">&sdot;</li>
                            <li>
                                <a href="#contact">Contact</a>
                            </li>
                        </ul>
                        <p class="copyright text-muted small">Copyright &copy; Your Company 2014. All Rights Reserved</p>
                    </div>
                </div>
            </div>
            <% if Rails.env.development? %>
              <div class="panel panel-warning"> 
                <div class="panel-heading"> 
                  <h3 class="panel-title">Debug! Essas informações não aparecem no ambiente de produção!</h3> 
                </div> 
                <div class="panel-body">
                </div> 
                <ul class='list-group'>
                  <% if current_professor %>
                    <li>
                      <h4>Logado como:</h4>
                      <table class="table">
                        <thead>
                          <tr>
                            <th>id</th>
                            <th>nome</th>
                            <th>sobrenome</th>
                            <th>nome_usuario</th>
                            <th>email</th>
                            <th>telefone</th>
                            <th>tipo</th>
                            <th>sair</th>
                          </tr> 
                        </thead>
                        <tbody>
                          <tr>
                            <th scope="row"><%= current_professor.id %></th>
                            <td><%= current_professor.nome %></td>
                            <td><%= current_professor.sobrenome %></td>
                            <td><%= current_professor.nome_usuario %></td>
                            <td><%= current_professor.email %></td>
                            <td><%= current_professor.telefone %></td>
                            <td><%= current_professor.type %></td>
                            <td><%= link_to "Sair", destroy_session_path(current_professor), method: :delete %></td>
                          </tr>
                        </tbody> 
                      </table>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
        </footer>
  </body>
</html>
